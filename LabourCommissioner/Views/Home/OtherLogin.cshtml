                        <span>@localizer["NewUser"]</span>
                        <a asp-controller="Home" asp-action="Registration" class="text-white ms-1">@localizer["PleaseRegisterHere"]</a>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->
