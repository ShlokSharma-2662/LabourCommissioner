<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="1" asp-route-pageSize="@(Model.PageSize)" asp-route-strServiceId="@Model.strServiceId" 
                       asp-route-districtId="@Model.EDistrictId" asp-route-talukaId="@Model.ETalukaId" 
                       asp-route-villageId="@Model.EVillageId" asp-route-fromDate="@Model.StartDate"
               asp-route-toDate="@Model.EndDate" asp-route-search="@Model.SearchText" asp-route-districtId="@Model.EDivisionId" asp-route-strbeneficiaryid="@Model.BeneficiaryId" asp-route-isApproved="@Model.isApproved" asp-route-serviceId="@Model.ServiceId" asp-route-statusId="@Model.StatusId" asp-route-subServiceId=@Model.SubServiceId>First</a>
                </li>

                <li class="page-item">
                @*<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="@(Model.CurrentPage-1)" asp-route-strServiceId="@Model.strServiceId">*@
                <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="@(Model.CurrentPage-1)" asp-route-pageSize="@(Model.PageSize)" asp-route-strServiceId="@Model.strServiceId" 
                   asp-route-districtId="@Model.EDistrictId" asp-route-talukaId="@Model.ETalukaId" 
                   asp-route-villageId="@Model.EVillageId" asp-route-fromDate="@Model.StartDate"
               asp-route-toDate="@Model.EndDate" asp-route-search="@Model.SearchText" asp-route-districtId="@Model.EDivisionId" asp-route-strbeneficiaryid="@Model.BeneficiaryId" asp-route-isApproved="@Model.isApproved" asp-route-serviceId="@Model.ServiceId" asp-route-statusId="@Model.StatusId" asp-route-subServiceId=@Model.SubServiceId>Previous</a>
                </li>
            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge==Model.CurrentPage?"active":"")">
                @*<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="@pge" asp-route-strServiceId="@Model.strServiceId">*@
                <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="@pge" asp-route-pageSize="@(Model.PageSize)" asp-route-strServiceId="@Model.strServiceId" 
                   asp-route-districtId="@Model.EDistrictId" asp-route-talukaId="@Model.ETalukaId" 
                   asp-route-villageId="@Model.EVillageId" asp-route-fromDate="@Model.StartDate"
               asp-route-toDate="@Model.EndDate" asp-route-search="@Model.SearchText" asp-route-districtId="@Model.EDivisionId" asp-route-strbeneficiaryid="@Model.BeneficiaryId" asp-route-isApproved="@Model.isApproved" asp-route-serviceId="@Model.ServiceId" asp-route-statusId="@Model.StatusId" asp-route-subServiceId=@Model.SubServiceId>@pge</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                @*<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="@(Model.CurrentPage+1)" asp-route-strServiceId="@Model.strServiceId">*@
                <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="@(Model.CurrentPage+1)" asp-route-pageSize="@(Model.PageSize)" asp-route-strServiceId="@Model.strServiceId" 
                   asp-route-districtId="@Model.EDistrictId" asp-route-talukaId="@Model.ETalukaId" 
                   asp-route-villageId="@Model.EVillageId" asp-route-fromDate="@Model.StartDate"
               asp-route-toDate="@Model.EndDate" asp-route-search="@Model.SearchText" asp-route-districtId="@Model.EDivisionId" asp-route-strbeneficiaryid="@Model.BeneficiaryId" asp-route-isApproved="@Model.isApproved" asp-route-serviceId="@Model.ServiceId" asp-route-statusId="@Model.StatusId" asp-route-subServiceId=@Model.SubServiceId>Next</a>
                </li>
                <li class="page-item">
                @*<a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="@(Model.TotalPages)" asp-route-strServiceId="@Model.strServiceId">*@
                <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pageNo="@(Model.TotalPages)" asp-route-pageSize="@(Model.PageSize)" asp-route-strServiceId="@Model.strServiceId" 
                   asp-route-districtId="@Model.EDistrictId" asp-route-talukaId="@Model.ETalukaId" 
                   asp-route-villageId="@Model.EVillageId" asp-route-fromDate="@Model.StartDate"
               asp-route-toDate="@Model.EndDate" asp-route-search="@Model.SearchText" asp-route-districtId="@Model.EDivisionId" asp-route-strbeneficiaryid="@Model.BeneficiaryId" asp-route-isApproved="@Model.isApproved" asp-route-serviceId="@Model.ServiceId" asp-route-statusId="@Model.StatusId" asp-route-subServiceId=@Model.SubServiceId>Last</a>
                </li>
            }
        </ul>
    }
</div>